@import 'config/mixins';
@import 'config/variables';

.section-01 {
    width: 100%;
    height: 100%;
    background: url(<%= asset_path 'back.jpg' %>) no-repeat; // mito-pattern-light-blue
    background-size: cover;

    .logo {
        position: relative;
        top: 41.5%;
        left: 50%;
        transform: translate(-50%,-50%);

        @include breakpoint(mobile-only) {
            width: 75%;
        }
        @include breakpoint(tablet-range) {
            width: 40%;
        }
        @include breakpoint(desktop-range) {
            width: 30%;
        }
        @include breakpoint(large-desktop-range) {
            width: 25%;
        }
    }
}

.dropdown-area {
    @include dark-box-shadow;
    position: absolute;
    bottom: 2.5%;
    width: 100%;
    background-color: #FAFAFA;

    p {
        @include vertical-align;
        width: 95%;
        margin: auto;
        text-align: center;
        font-size: 1.2rem;
    }

    a {
        color: #4486AE;
        text-decoration: none;
    }

    @include breakpoint(mobile-only) {
        height: 15%;
    }
    @include breakpoint(tablet-range) {
        height: 10%;
    }
    @include breakpoint(desktop-range) {
        height: 10%;
    }
    @include breakpoint(large-desktop-range) {
        height: 7.5%;
    }
}